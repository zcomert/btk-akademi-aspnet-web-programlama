@model IReadOnlyList<ContactApp.Contracts.DTOs.NewsArticleDto>

<h1 class="mb-4">Habeler</h1>

@if(Model is null || Model.Count==0)
{
    <div class="alert alert-info">
        Herhangi bir haber bulunamadı!
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-stripped aling-middle">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Status</th>
                    <th>Published</th>
                    <th>Summary</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            <a 
                                asp-controller="News" 
                                asp-action="Details" 
                                asp-route-id="@item.Id">@item.Title
                            </a>
                        </td>
                        <td>@item.AuthorName</td>
                        <td>@item.Status</td>
                        <td>@(item.PublishedAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                        <td>@item.Summary</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}