@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Kullanıcılar";
}

<h1 class="display-5">Kullanıcılar</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Yeni Oluştur</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Kullanıcı Adı
            </th>
            <th>
                E-posta
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.UserName
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="ManageRoles" asp-route-id="@item.Id">Rolleri Yönet</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
        </tbody>
</table>
