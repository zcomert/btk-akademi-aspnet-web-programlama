@model UserRoleViewModel

@{
    ViewData["Title"] = "Kullanıcı Rollerini Yönet";
}

<h1>@Model.UserName için Rol Yönetimi</h1>

<form asp-action="ManageRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        @if (Model.Roles != null)
        {
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check">
                    <input type="checkbox"
                           class="form-check-input"
                           name="UserRoles"
                           value="@Model.Roles[i].Name"
                    @(Model.UserRoles != null && Model.Roles[i].Name != null && Model.UserRoles.Contains(Model.Roles[i].Name!) ? "checked" : "") />
                    <label class="form-check-label">@Model.Roles[i].Name</label>
                </div>
            }
        }
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>
