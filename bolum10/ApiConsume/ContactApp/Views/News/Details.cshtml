@model ContactApp.Contracts.DTOs.NewsArticleDto

<div class="mb-3">
    <a 
        asp-controller="News" 
        asp-action="Index"
        class="btn btn-link">Tüm Haberler</a>

    <h1 class="h3 my-2">@Model.Title</h1>
    <div class="text-muted">
        <span>Yazar: <strong>@Model.AuthorName</strong></span>
        <span class="ms-3">Durum : <span class="badge bg-secondary"> @Model.Status </span> </span>
        <span class="ms-3">Yayın : @(Model.PublishedAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</span>
    </div>
</div>

@if(!string.IsNullOrEmpty(Model.Summary))
{
    <p class="lead">@Model.Summary</p>
}

<article class="mt-3">
    <div>
        @Html.Raw(Model.Content)
    </div>
</article>