@model IEnumerable<ResApp.Models.ApiBookDto>
@{
    ViewData["Title"] = "Kitap Kataloğu";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>Kitaplar</h1>
        <p class="text-muted">LibApp servisinden anlık olarak çekilen kitap listesi.</p>
    </div>
    <a asp-controller="Reservations" asp-action="Index" class="btn btn-outline-primary">Rezervasyonlarım</a>
</div>

@if (TempData["SuccessMessage"] is string successMessage)
{
    <div class="alert alert-success">@successMessage</div>
}
else if (TempData["ErrorMessage"] is string errorMessage)
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">Şu anda listelenecek kitap bulunamadı.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3">
        @foreach (var book in Model)
        {
            <div class="col">
                <div class="card h-100">
                    @if (!string.IsNullOrWhiteSpace(book.CoverImageUrl))
                    {
                        <img class="card-img-top" src="@book.CoverImageUrl" alt="@book.Title" />
                    }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@book.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@book.Author</h6>
                            <p class="card-text flex-fill">@book.Description</p>
                            <div class="d-flex gap-2 mt-3">
                                <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-secondary btn-sm">Detay</a>
                                <form asp-controller="Reservations" asp-action="QuickReserve" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="bookId" value="@book.Id" />
                                    <button type="submit" class="btn btn-primary btn-sm">Rezerve Et</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
}
