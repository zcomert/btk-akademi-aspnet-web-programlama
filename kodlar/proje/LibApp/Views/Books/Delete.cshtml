@model Book
@{
    ViewData["Title"] = "Kitabı Sil";
}

<h2>Kitabı Sil</h2>
<div class="alert alert-warning">
    <strong>@Model.Title</strong> kaydını silmek istediğinizden emin misiniz?
</div>

<dl class="row">
    <dt class="col-sm-3">ISBN</dt>
    <dd class="col-sm-9">@Model.ISBN</dd>
    <dt class="col-sm-3">Kategori</dt>
    <dd class="col-sm-9">@Model.Category?.Name</dd>
    <dt class="col-sm-3">Yayınevi</dt>
    <dd class="col-sm-9">@Model.Publisher?.Name</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="BookId"/>
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
