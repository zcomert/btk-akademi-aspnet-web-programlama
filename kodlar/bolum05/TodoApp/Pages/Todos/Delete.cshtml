@page "{id:guid}"
@model TodoApp.Pages.Todos.DeleteModel
@{
    ViewData["Title"] = "Görev Sil";
}

<h1>Görev Sil</h1>

<div class="alert alert-warning mt-3">
    <p><strong>Bu görevi silmek istediğinizden emin misin?</strong></p>
    <p class="mb-0">@Model.Todo?.Title</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-page="Index" class="btn btn-secondary">Vazgeç</a>
</form>
