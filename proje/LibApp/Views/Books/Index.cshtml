@model IEnumerable<Book>
@{
    ViewData["Title"] = "Kitaplar";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">Kitaplar</h2>
        <small class="text-muted">@ViewBag.Username kullanıcısı ile oturum açıldı</small>
    </div>
    <div>
        <a asp-controller="Account" asp-action="Logout" class="btn btn-link">Çıkış Yap</a>
        <a asp-action="Create" class="btn btn-primary">Kitap Ekle</a>
    </div>
</div>

@if (TempData["Message"] is string alert)
{
    <div class="alert alert-success">@alert</div>
}

<table class="table table-striped">
    <thead>
    <tr>
        <th>Başlık</th>
        <th>Yazarlar</th>
        <th>Kategori</th>
        <th>Yayınevi</th>
        <th>Durum</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <strong>@item.Title</strong>
                <div class="text-muted small">@item.ISBN</div>
            </td>
            <td>
                @string.Join(", ", item.BookAuthors.Select(a => $"{a.Author?.FirstName} {a.Author?.LastName}"))
            </td>
            <td>@item.Category?.Name</td>
            <td>@item.Publisher?.Name</td>
            <td>
                @if (item.IsActive)
                {
                    <span class="badge bg-success">Aktif</span>
                }
                else
                {
                    <span class="badge bg-secondary">Pasif</span>
                }
            </td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-sm btn-outline-secondary">Düzenle</a>
                <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-sm btn-outline-danger">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>
